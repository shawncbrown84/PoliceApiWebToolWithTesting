
@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    <div class="panel">
        <div class="panel-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Latitude</label>
                    <div class="col-sm-10">
                        <input type="number" step=".00001" required class="form-control" name="latitude" id="latitude" placeholder="51.44237" value=" @ViewData["Latitude"]">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Longitude</label>
                    <div class="col-sm-10">
                        <input type="number" step=".00001" required class="form-control" name="longitude" id="longitude" placeholder="-2.49810" value=" @ViewData["Longitude"]">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Date</label>
                    <div class="col-sm-10">
                        <input type="month" class="form-control" name="date" id="date" placeholder="2021-01" value=" @ViewData["Date"]">
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-10">
                        <button type="submit" value="Index" class="btn btn-primary">Search</button>
                    </div>
                </div>
            }
            </div>
    </div>
</div>



@{
    @Html.Action("Summary", "Home", new { Latitude = @ViewData["Latitude"], Longitude = @ViewData["Longitude"], Date = @ViewData["Date"] });
}



@{
    @Html.Action("AllData", "Home", new { Latitude = @ViewData["Latitude"], Longitude = @ViewData["Longitude"], Date = @ViewData["Date"] });
}

